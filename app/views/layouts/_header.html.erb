<div class="top-bar" style="padding-bottom: 44px" >
  <div class="row" >
    <div class="top-bar-left">
      <ul class="dropdown menu" data-dropdown-menu>
        <li><%= link_to "Ecokat Book Store", root_path, {:class => "menu-text"} %></li>
        <li class="has-submenu">
          <a>Categories</a>
          <ul class="submenu menu vertical" data-submenu>
            <% @categories.each do |category| %>
            <li><%= link_to category.name, category_path(category) %></li>
            <% end %>
          </ul>
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'Contact', contact_path %></li>
        </li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <li>
        <%= form_tag(search_results_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search ANYTHING here!" %></li>
            <li><%= button_tag "Search" , {:class => 'button'}%></li>
        <% end %>
        <% if user_signed_in?  %>
            <li><%= link_to 'My Profile', edit_user_registration_path(user_session), {:class => 'button round seconday', :style=>"color:#fff;"} %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, {:class => 'button round secondary',:style=>"color:#fff;", method: :delete} %></li>
        <% else %>
            <li><%= link_to 'Sign In', new_user_session_path, {:class => 'button round secondary'} %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, {:class => 'button round secondary'} %></li>
        <% end %>
        <li><button type="button" class="button round alert "><i class="fi-[shopping-cart]"></i>My Cart</button></li>
      </ul>
    </div>
  </div>
</div>
