<br>
<div class="row columns">
  <nav aria-label="You are here:" role="navigation">
    <ul class="breadcrumbs">
      <li><%= link_to "Home", root_path %></li>
      <li>
        <span class="show-for-sr">Current: </span> Shopping Cart
      </li>
    </ul>
  </nav>
</div>

<div class="row column text-center">
  <h2 align="center">Shopping Cart</h2>
  <br>
</div>


<div class="row column text-center">
  <h3>Your item(s)</h3>
  <hr>
</div>

<div class="row">
  <% @shopping_cart.shopping_cart_items.each do |item| %>
      <div class="row small-1 panel">
          <div class="column small-2">
            <%= image_tag item.item.avatar.url(:thumb), {:class => 'thumbnail'} %>
          </div>
          <div class="column small-4">
            <br>
            <h5><%= link_to item.item.name, book_path(item.item)  %></h5>
          </div>
          <div class="column small-4">
            <br>
            <p><%= number_to_currency(item.item.cost, unit:"") %> &#x20BA;
            <p>Quantity: <%= item.quantity %> </p>
          </div>
          <div class="column small-2">
            <br>
            <br>
            <%= link_to 'Remove', {:controller => :carts, :action => :remove, :item => item.item.id},{ :class => 'button alert'} %>
          </div>
      </div>
  <% end %>
</div>
<hr>
<div class="row">
  <div class="column small-6">
    <%= link_to 'Clear Cart', {:controller => :carts, :action => :clear, :id => params[:id]},{ :class => 'button alert'} %>
  </div>
  <div class="column small-6">
    <p align="right"><b>Taxes: </b><%= number_to_currency @shopping_cart.taxes, unit:"" %> &#x20BA;</p>
    <p align="right"><b>Shipping Cost: </b><%= number_to_currency @shopping_cart.shipping_cost, unit:"" %> &#x20BA;</p>
    <p align="right"><b>Total: </b><%= number_to_currency @shopping_cart.total, unit:"" %> &#x20BA;</p>
  </div>
</div>
<hr>


